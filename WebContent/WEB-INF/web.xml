<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">

    <display-name>EniEncheres</display-name>

    <welcome-file-list>
        <welcome-file>accueil</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>accueil</servlet-name>
        <servlet-class>fr.eni.encheres.servlet.ServletAccueil</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>accueil</servlet-name>
        <url-pattern>/accueil</url-pattern>
        <url-pattern>/eni/encheres</url-pattern>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <error-page>
        <error-code>404</error-code>
        <location>/erreur/erreur404.html</location>
    </error-page>

</web-app>